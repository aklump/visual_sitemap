{
    "$schema": "http://json-schema.org/draft-06/schema#",
    "type": "object",
    "definitions": {
        "state": {
            "type": "string"
        },
        "section": {
            "type": "object",
            "additionalProperties": false,
            "properties": {
                "title": {
                    "type": "string",
                    "minLength": 1
                },
                "notes": {
                    "type": "array"
                },
                "more": {
                    "type": "string",
                    "minLength": 1
                },
                "privileged": {
                    "type": "boolean"
                },
                "state": {
                    "#ref": "state"
                },
                "icon": {
                    "type": "string"
                },
                "type": {
                    "type": "string",
                    "default": "page",
                    "enum": [
                        "page",
                        "content",
                        "link",
                        "external",
                        "modal",
                        "download",
                        "form"
                    ]
                },
                "path": {
                    "type": "string",
                    "pattern": "^\\/|http"
                },
                "sections": {
                    "type": "array",
                    "items": {
                        "$ref": "#/definitions/section"
                    }
                }
            },
            "required": [
                "title"
            ]
        }
    },
    "properties": {
        "title": {
            "type": "string",
            "minLength": 1
        },
        "branding_color": {
            "type": "string",
            "pattern": "^#[\\d]{6}$"
        },
        "subtitle": {
            "type": "string"
        },
        "description": {
            "type": "string"
        },
        "footer": {
            "type": "string"
        },
        "baseUrl": {
            "type": "string"
        },
        "timezone": {
            "type": "string"
        },
        "states": {
            "type": "object",
            "additionalProperties": true
        },
        "sections": {
            "type": "array",
            "items": {
                "$ref": "#/definitions/section"
            }
        }
    },
    "additionalProperties": false,
    "required": [
        "title",
        "timezone",
        "baseUrl"
    ]
}
